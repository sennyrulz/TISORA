{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/index.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/index.mjs" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ]
}
